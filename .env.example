# MTDify Environment Configuration
# Copy this file to .env and modify as needed

# ===========================================
# DJANGO SETTINGS
# ===========================================

# Debug mode - set to False in production
DEBUG=True

# Secret key for cryptographic signing
# IMPORTANT: Generate a unique key for production!
# Run: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=change-me-in-production

# Allowed hosts - comma-separated list
# Examples:
#   Development: localhost,127.0.0.1
#   Production: yourdomain.com,www.yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1

# ===========================================
# OPTIONAL: DEFAULT USER (for development)
# ===========================================

# These are used by: python manage.py create_default_user
# DEFAULT_USER_EMAIL=demo@example.com
# DEFAULT_USER_PASSWORD=demo123

# ===========================================
# PRODUCTION NOTES
# ===========================================

# When DEBUG=False, the following security settings are automatically enabled:
# - SECURE_SSL_REDIRECT = True (forces HTTPS)
# - SESSION_COOKIE_SECURE = True
# - CSRF_COOKIE_SECURE = True
# - CSRF_TRUSTED_ORIGINS based on ALLOWED_HOSTS

# Ensure your reverse proxy (Nginx, Caddy, etc.) sets:
# - X-Forwarded-Proto header
# - X-Forwarded-For header
